{
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    },
    "plugins": [
        "react",
        "jest"
    ],
    "parser": "babel-eslint",
    "rules": {
        "semi": 2,
        "no-unused-vars": 1,
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2,
        "no-var": 1,
        "no-empty": 2,
        "no-extra-boolean-cast": 2,
        "no-alert": 2,
        "no-else-return": 2,
        "no-multi-spaces": 2,
        "brace-style": 2,
        "camelcase": 2,
        "comma-dangle": 2,
        "comma-spacing": 2,
        "computed-property-spacing": 2,
        "consistent-this": [2, "self"],
        "func-call-spacing": 2,
        "jsx-quotes": 2,
        "indent": [2, "tab", {
            "SwitchCase": 1
        }],
        "key-spacing": [2, {
            "mode": "strict"
        }],
        "keyword-spacing": 2,
        "linebreak-style": 2,
        "multiline-ternary": [2, "never"],
        "new-cap": 2,
        "no-lonely-if": 2,
        "no-mixed-spaces-and-tabs": 2,
        "no-multiple-empty-lines": [2, {
            "max": 1
        }],
        "no-trailing-spaces": 2,
        "no-whitespace-before-property": 2,

        "object-curly-spacing": 1,
        "one-var-declaration-per-line": 1,
        "quotes": [2, "single"],
        "semi-spacing": ["error", {
            "before": false,
            "after": true
        }],
        "space-in-parens": 2,
        "space-infix-ops": 2,
        "space-unary-ops": 1,
        "spaced-comment": 1,
        "no-console": [1, {
            "allow": ["warn", "error", "info"]
        }],
        "no-debugger": 1
    },
    "extends": "eslint:recommended"
}